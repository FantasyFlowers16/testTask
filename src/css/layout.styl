.q-page-container
    background: #7C82CF;
    background: -webkit-linear-gradient(to top, #7C82CF 0%, #FFFFFF 100%);
    background: -moz-linear-gradient(to top, #7C82CF 0%, #FFFFFF 100%);
    background: linear-gradient(to top, #7C82CF 0%, #FFFFFF 100%);
    font 300 15px/18px "Roboto",sans-serif
    display flex
    flex-direction column
    min-width: 320px;
    min-height calc(100vh - 70px)
    &__content
        display flex
        flex-direction column
        align-items center
        padding 60px 30px
        width: 100%;
        max-width 1920px
        margin 0 auto
    @media screen and (min-width:$desktop)
        &__content
            padding: 120px 150px;